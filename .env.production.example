# TradingNode Production Configuration
# Copy to .env.production and fill in your values
# WARNING: These settings are for LIVE trading!

# =============================================================================
# CORE SETTINGS
# =============================================================================
NAUTILUS_TRADER_ID=PROD-TRADER-001
NAUTILUS_ENVIRONMENT=LIVE

# =============================================================================
# REDIS CACHE (REQUIRED for production)
# =============================================================================
REDIS_HOST=redis  # Docker service name or IP
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_TIMEOUT=2.0

# =============================================================================
# LOGGING
# =============================================================================
NAUTILUS_LOG_LEVEL=INFO
NAUTILUS_LOG_LEVEL_FILE=DEBUG
NAUTILUS_LOG_DIRECTORY=/var/log/nautilus
NAUTILUS_LOG_FORMAT=json

# =============================================================================
# STREAMING / DATA CATALOG
# =============================================================================
NAUTILUS_CATALOG_PATH=/data/nautilus/catalog
NAUTILUS_FLUSH_INTERVAL_MS=2000

# =============================================================================
# RECONCILIATION SETTINGS (CRITICAL for crash recovery)
# =============================================================================
NAUTILUS_RECONCILIATION_LOOKBACK_MINS=60  # Minimum: 60
NAUTILUS_RECONCILIATION_STARTUP_DELAY_SECS=10.0  # Minimum: 10.0

# =============================================================================
# RATE LIMITS (Conservative defaults for production)
# =============================================================================
NAUTILUS_MAX_ORDER_SUBMIT_RATE=100/00:00:01
NAUTILUS_MAX_ORDER_MODIFY_RATE=100/00:00:01

# =============================================================================
# BINANCE PRODUCTION
# =============================================================================
# CRITICAL: Use read-only API key for data-only operations
# Enable IP whitelist for security
BINANCE_API_KEY=your_production_api_key
BINANCE_API_SECRET=your_production_api_secret
BINANCE_TESTNET=false
BINANCE_ACCOUNT_TYPE=USDT_FUTURES
BINANCE_US=false

# =============================================================================
# BYBIT PRODUCTION (Optional)
# =============================================================================
# NOTE: Hedge mode NOT supported - ensure NETTING mode in Bybit settings
BYBIT_API_KEY=your_production_api_key
BYBIT_API_SECRET=your_production_api_secret
BYBIT_TESTNET=false
BYBIT_DEMO=false
