# TradingNode Configuration
# Copy to .env and fill in your values
# See docs: specs/014-tradingnode-configuration/quickstart.md

# =============================================================================
# CORE SETTINGS
# =============================================================================
NAUTILUS_TRADER_ID=TRADER-001
NAUTILUS_ENVIRONMENT=SANDBOX  # LIVE or SANDBOX

# =============================================================================
# REDIS CACHE
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TIMEOUT=2.0

# =============================================================================
# LOGGING
# =============================================================================
NAUTILUS_LOG_LEVEL=INFO
NAUTILUS_LOG_LEVEL_FILE=DEBUG
NAUTILUS_LOG_DIRECTORY=/var/log/nautilus
NAUTILUS_LOG_FORMAT=json  # json or text

# =============================================================================
# STREAMING / DATA CATALOG
# =============================================================================
NAUTILUS_CATALOG_PATH=/data/nautilus/catalog
NAUTILUS_FLUSH_INTERVAL_MS=2000

# =============================================================================
# RECONCILIATION SETTINGS
# =============================================================================
NAUTILUS_RECONCILIATION_LOOKBACK_MINS=60  # Minimum: 60
NAUTILUS_RECONCILIATION_STARTUP_DELAY_SECS=10.0  # Minimum: 10.0

# =============================================================================
# RATE LIMITS
# =============================================================================
NAUTILUS_MAX_ORDER_SUBMIT_RATE=100/00:00:01
NAUTILUS_MAX_ORDER_MODIFY_RATE=100/00:00:01

# =============================================================================
# BINANCE (optional - at least one exchange required)
# =============================================================================
# Get API keys: https://www.binance.com/en/my/settings/api-management
# Testnet keys: https://testnet.binancefuture.com/
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_TESTNET=true  # Set to false for production
BINANCE_ACCOUNT_TYPE=USDT_FUTURES  # SPOT, USDT_FUTURES, COIN_FUTURES
BINANCE_US=false  # Set to true for Binance.US

# =============================================================================
# BYBIT (optional - at least one exchange required)
# =============================================================================
# Get API keys: https://www.bybit.com/app/user/api-management
# Testnet keys: https://testnet.bybit.com/
# NOTE: Hedge mode NOT supported - use NETTING mode only
BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_TESTNET=true  # Set to false for production
BYBIT_DEMO=false  # Demo mode (paper trading)
