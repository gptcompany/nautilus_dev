# NautilusTrader Development Environment
# Copy this file to .env and fill in your values
# NEVER commit .env with actual credentials!

# =============================================================================
# Sentry Error Tracking
# =============================================================================
SENTRY_DSN=https://your-dsn@sentry.io/project
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug
SENTRY_AUTH_TOKEN=your-auth-token

# =============================================================================
# QuestDB Metrics
# =============================================================================
QUESTDB_HOST=localhost
QUESTDB_HTTP_PORT=9000
QUESTDB_ILP_PORT=9009
METRICS_ENABLED=true

# =============================================================================
# Grafana
# =============================================================================
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# =============================================================================
# Redis Cache (Spec 018)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_TIMEOUT=2

# =============================================================================
# Hyperliquid (see configs/hyperliquid/.env.example for details)
# =============================================================================
HYPERLIQUID_TESTNET_PK=0x_your_testnet_private_key
HYPERLIQUID_PK=0x_your_mainnet_private_key

# =============================================================================
# Discord Alerts
# =============================================================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# =============================================================================
# Ralph Autonomous Mode (Spec 040)
# =============================================================================
# Enable Ralph mode for autonomous development loops
# When enabled, Claude will continue working on tasks automatically
RALPH_MODE=false

# Max iterations before circuit breaker trips
RALPH_MAX_ITERATIONS=15

# Budget limit in USD per session
RALPH_MAX_BUDGET_USD=20.0

# =============================================================================
# NautilusTrader
# =============================================================================
NAUTILUS_CATALOG_PATH=./nautilus_catalog
NAUTILUS_VERSION=1.222.0
PYTHON_VERSION=3.12

# =============================================================================
# Development
# =============================================================================
LOG_LEVEL=INFO
DEBUG=false
