# =============================================================================
# TradingNode Configuration Environment Variables
# Copy to .env and configure for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Environment Settings
# -----------------------------------------------------------------------------
TRADER_ID=TRADER-001
ENVIRONMENT=production  # production, testnet, backtest

# -----------------------------------------------------------------------------
# Redis Cache Configuration (Spec 018)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TIMEOUT=10

# -----------------------------------------------------------------------------
# Binance Configuration
# -----------------------------------------------------------------------------
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_ACCOUNT_TYPE=USDT_FUTURES  # SPOT, USDT_FUTURES, COIN_FUTURES
BINANCE_TESTNET=false
BINANCE_US=false

# -----------------------------------------------------------------------------
# Bybit Configuration
# -----------------------------------------------------------------------------
BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_PRODUCT_TYPES=LINEAR  # LINEAR, INVERSE, SPOT, OPTION (comma-separated)
BYBIT_TESTNET=false
BYBIT_DEMO=false

# -----------------------------------------------------------------------------
# Reconciliation Settings
# -----------------------------------------------------------------------------
RECONCILIATION_LOOKBACK_MINS=1440  # 24 hours
RECONCILIATION_STARTUP_DELAY_SECS=10.0  # Minimum 10 seconds

# -----------------------------------------------------------------------------
# Rate Limits
# -----------------------------------------------------------------------------
MAX_ORDER_SUBMIT_RATE=10/00:00:01  # 10 orders per second
MAX_ORDER_MODIFY_RATE=10/00:00:01  # 10 modifications per second

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_LEVEL_FILE=DEBUG
LOG_DIRECTORY=./logs
LOG_FORMAT=text  # text or json
LOG_MAX_SIZE_MB=100
LOG_MAX_BACKUP_COUNT=5

# -----------------------------------------------------------------------------
# Streaming/Catalog Configuration
# -----------------------------------------------------------------------------
CATALOG_PATH=./catalog
CATALOG_FLUSH_INTERVAL_MS=1000
CATALOG_ROTATION_MODE=SIZE  # NONE, SIZE, TIME
CATALOG_MAX_FILE_SIZE_MB=100
