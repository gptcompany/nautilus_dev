{
  "uid": "nautilus-trading",
  "title": "Trading Performance",
  "description": "Real-time trading performance monitoring (US5)",
  "tags": ["nautilus", "trading", "pnl"],
  "timezone": "browser",
  "refresh": "5s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "strategy",
        "type": "query",
        "datasource": "QuestDB",
        "query": "SELECT DISTINCT strategy FROM trading_metrics WHERE timestamp > now() - interval '24h'",
        "refresh": 1,
        "multi": true,
        "includeAll": true,
        "allValue": "%"
      },
      {
        "name": "symbol",
        "type": "query",
        "datasource": "QuestDB",
        "query": "SELECT DISTINCT symbol FROM trading_metrics WHERE timestamp > now() - interval '24h'",
        "refresh": 1,
        "multi": true,
        "includeAll": true,
        "allValue": "%"
      },
      {
        "name": "venue",
        "type": "custom",
        "options": [
          {"text": "All", "value": "%"},
          {"text": "Binance", "value": "binance"},
          {"text": "Bybit", "value": "bybit"},
          {"text": "OKX", "value": "okx"}
        ],
        "current": {"text": "All", "value": "%"}
      },
      {
        "name": "env",
        "type": "custom",
        "options": [
          {"text": "prod", "value": "prod"},
          {"text": "staging", "value": "staging"},
          {"text": "dev", "value": "dev"}
        ],
        "current": {"text": "prod", "value": "prod"}
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Total PnL",
      "type": "stat",
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
      "datasource": "QuestDB",
      "targets": [
        {
          "rawSql": "SELECT sum(pnl) + sum(unrealized_pnl) as total_pnl FROM trading_metrics WHERE timestamp > now() - interval '1m' AND strategy LIKE '${strategy}' AND symbol LIKE '${symbol}' AND venue LIKE '${venue}' AND env = '${env}' LATEST BY strategy, symbol",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 0},
              {"color": "green", "value": 100}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none"
      }
    },
    {
      "id": 2,
      "title": "Realized PnL",
      "type": "stat",
      "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
      "datasource": "QuestDB",
      "targets": [
        {
          "rawSql": "SELECT sum(pnl) as realized_pnl FROM trading_metrics WHERE timestamp > now() - interval '1m' AND strategy LIKE '${strategy}' AND symbol LIKE '${symbol}' AND venue LIKE '${venue}' AND env = '${env}' LATEST BY strategy, symbol",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 0}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Unrealized PnL",
      "type": "stat",
      "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
      "datasource": "QuestDB",
      "targets": [
        {
          "rawSql": "SELECT sum(unrealized_pnl) as unrealized FROM trading_metrics WHERE timestamp > now() - interval '1m' AND strategy LIKE '${strategy}' AND symbol LIKE '${symbol}' AND venue LIKE '${venue}' AND env = '${env}' LATEST BY strategy, symbol",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 0}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Max Drawdown",
      "type": "stat",
      "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
      "datasource": "QuestDB",
      "targets": [
        {
          "rawSql": "SELECT max(drawdown) as max_dd FROM trading_metrics WHERE timestamp > now() - interval '24h' AND strategy LIKE '${strategy}' AND symbol LIKE '${symbol}' AND venue LIKE '${venue}' AND env = '${env}'",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 5},
              {"color": "orange", "value": 10},
              {"color": "red", "value": 20}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "PnL Over Time",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
      "datasource": "QuestDB",
      "targets": [
        {
          "rawSql": "SELECT timestamp, strategy, pnl + unrealized_pnl as total_pnl FROM trading_metrics WHERE timestamp > now() - interval '24h' AND strategy LIKE '${strategy}' AND symbol LIKE '${symbol}' AND venue LIKE '${venue}' AND env = '${env}'",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10,
            "gradientMode": "scheme"
          },
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 6,
      "title": "Orders Per Hour",
      "type": "timeseries",
      "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
      "datasource": "QuestDB",
      "targets": [
        {
          "rawSql": "SELECT timestamp, strategy, max(orders_placed) - min(orders_placed) as orders_delta FROM trading_metrics WHERE timestamp > now() - interval '24h' AND strategy LIKE '${strategy}' AND symbol LIKE '${symbol}' AND venue LIKE '${venue}' AND env = '${env}' SAMPLE BY 1h FILL(NULL) ALIGN TO CALENDAR GROUP BY strategy",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 50
          },
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 7,
      "title": "Position Exposure by Symbol",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
      "datasource": "QuestDB",
      "targets": [
        {
          "rawSql": "SELECT timestamp, symbol, exposure FROM trading_metrics WHERE timestamp > now() - interval '6h' AND strategy LIKE '${strategy}' AND symbol LIKE '${symbol}' AND venue LIKE '${venue}' AND env = '${env}'",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "stepAfter",
            "fillOpacity": 20,
            "stacking": {"mode": "normal"}
          },
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 8,
      "title": "Fill Rate by Strategy",
      "type": "timeseries",
      "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
      "datasource": "QuestDB",
      "targets": [
        {
          "rawSql": "SELECT timestamp, strategy, avg(fill_rate) * 100 as fill_pct FROM trading_metrics WHERE timestamp > now() - interval '24h' AND strategy LIKE '${strategy}' AND symbol LIKE '${symbol}' AND venue LIKE '${venue}' AND env = '${env}' SAMPLE BY 1h FILL(NULL) ALIGN TO CALENDAR GROUP BY strategy",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "green", "value": 80}
            ]
          }
        }
      }
    },
    {
      "id": 9,
      "title": "Drawdown History",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 20, "w": 24, "h": 6},
      "datasource": "QuestDB",
      "targets": [
        {
          "rawSql": "SELECT timestamp, strategy, drawdown FROM trading_metrics WHERE timestamp > now() - interval '7d' AND strategy LIKE '${strategy}' AND symbol LIKE '${symbol}' AND venue LIKE '${venue}' AND env = '${env}'",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 30,
            "fillBelowTo": "0"
          },
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 5},
              {"color": "orange", "value": 10},
              {"color": "red", "value": 20}
            ]
          }
        }
      },
      "options": {
        "legend": {"showLegend": true, "placement": "bottom"}
      }
    },
    {
      "id": 10,
      "title": "Strategy Performance Table",
      "type": "table",
      "gridPos": {"x": 0, "y": 26, "w": 24, "h": 8},
      "datasource": "QuestDB",
      "targets": [
        {
          "rawSql": "SELECT strategy, symbol, venue, pnl, unrealized_pnl, pnl + unrealized_pnl as total_pnl, position_size, exposure, orders_placed, orders_filled, fill_rate * 100 as fill_pct, drawdown FROM trading_metrics WHERE timestamp > now() - interval '1m' AND strategy LIKE '${strategy}' AND symbol LIKE '${symbol}' AND venue LIKE '${venue}' AND env = '${env}' LATEST BY strategy, symbol ORDER BY total_pnl DESC",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "pnl"},
            "properties": [
              {"id": "unit", "value": "currencyUSD"},
              {"id": "custom.cellOptions", "value": {"type": "color-text"}},
              {"id": "thresholds", "value": {
                "mode": "absolute",
                "steps": [
                  {"color": "red", "value": null},
                  {"color": "green", "value": 0}
                ]
              }}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "unrealized_pnl"},
            "properties": [
              {"id": "unit", "value": "currencyUSD"},
              {"id": "custom.cellOptions", "value": {"type": "color-text"}},
              {"id": "thresholds", "value": {
                "mode": "absolute",
                "steps": [
                  {"color": "red", "value": null},
                  {"color": "green", "value": 0}
                ]
              }}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "total_pnl"},
            "properties": [
              {"id": "unit", "value": "currencyUSD"},
              {"id": "custom.cellOptions", "value": {"type": "color-text"}},
              {"id": "thresholds", "value": {
                "mode": "absolute",
                "steps": [
                  {"color": "red", "value": null},
                  {"color": "green", "value": 0}
                ]
              }}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "exposure"},
            "properties": [{"id": "unit", "value": "currencyUSD"}]
          },
          {
            "matcher": {"id": "byName", "options": "fill_pct"},
            "properties": [
              {"id": "unit", "value": "percent"},
              {"id": "decimals", "value": 1}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "drawdown"},
            "properties": [
              {"id": "unit", "value": "percent"},
              {"id": "custom.cellOptions", "value": {"type": "color-text"}},
              {"id": "thresholds", "value": {
                "mode": "absolute",
                "steps": [
                  {"color": "green", "value": null},
                  {"color": "yellow", "value": 5},
                  {"color": "red", "value": 15}
                ]
              }}
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [{"displayName": "total_pnl", "desc": true}]
      }
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
