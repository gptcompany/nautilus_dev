# monitoring/.env.example
# T004: Environment variables template for monitoring stack
#
# Copy this file to .env and customize for your environment:
#   cp .env.example .env

# =============================================================================
# QuestDB Configuration
# =============================================================================
MONITORING_QUESTDB_HOST=localhost
MONITORING_QUESTDB_HTTP_PORT=9000
MONITORING_QUESTDB_ILP_PORT=9009

# =============================================================================
# Grafana Configuration
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# Environment Identification
# =============================================================================
# Environment: prod, staging, dev
MONITORING_ENV=dev
# Hostname identifier for this instance
MONITORING_HOST=localhost

# =============================================================================
# Collection Intervals (seconds)
# =============================================================================
MONITORING_DAEMON_COLLECT_INTERVAL=10.0
MONITORING_EXCHANGE_COLLECT_INTERVAL=5.0
MONITORING_PIPELINE_COLLECT_INTERVAL=30.0
MONITORING_TRADING_COLLECT_INTERVAL=1.0

# =============================================================================
# Batching Configuration
# =============================================================================
# Max metrics to buffer before flush (1-10000)
MONITORING_BATCH_SIZE=500
# Max time between flushes (seconds, >= 0.1)
MONITORING_FLUSH_INTERVAL=5.0

# =============================================================================
# Alerting - Telegram (Optional)
# =============================================================================
# Get from BotFather: https://t.me/botfather
# 1. Message @BotFather on Telegram
# 2. Send /newbot and follow prompts
# 3. Copy the bot token
# 4. Get chat ID: message your bot, visit https://api.telegram.org/bot<token>/getUpdates
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# Alerting - Discord (Optional)
# =============================================================================
# Create webhook: Server Settings > Integrations > Webhooks > New Webhook
# Copy the webhook URL
DISCORD_WEBHOOK_URL=

# =============================================================================
# Alerting - Email (Optional)
# =============================================================================
# Comma-separated list of recipient email addresses
ALERT_EMAIL_ADDRESSES=alerts@example.com

# Grafana SMTP configuration (required for email alerts)
GF_SMTP_ENABLED=false
GF_SMTP_HOST=smtp.gmail.com:587
GF_SMTP_USER=
GF_SMTP_PASSWORD=
GF_SMTP_FROM_ADDRESS=grafana@localhost
GF_SMTP_FROM_NAME=Nautilus Monitoring
